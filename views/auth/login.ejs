<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(errorMessage) {%>
                <div class="user-message--error"><%= errorMessage %></div>
            <% } %>
            <form action="/login" method="POST" class="login-form">
                <div class="form-group my-3">
                    <label for="username">User Name:</label>
                    <input 
                        class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'invalid' : ''%>" 
                        type="username" 
                        name="username" 
                        id="username" 
                        value="<%= oldInput.username%>">
                </div>
                <div class="form-group my-3">
                    <label for="password">Password:</label>
                    <input 
                        class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>" 
                        type="password" 
                        name="password" 
                        id="password" 
                        value="<%= oldInput.password%>">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-success" type="submit">Login</button>
            </form>
        </main>
        <%- include('../includes/end.ejs') %>
