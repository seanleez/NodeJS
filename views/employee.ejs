<%- include('includes/head.ejs')%>
    </head>
    <body>

        <%- include('includes/navigation.ejs')%>

        <main>

            <%- include('includes/layout.ejs')%>

                    <form
                        action="/punch-in"
                        method="POST"
                        class="col-xs-12 col-md-6 col-lg-8"
                    >
                        <h2 class="text-center"><%= employee.name %></h2>
                        <hr>
                        <table>
                            <tr>
                                <td>
                                    <label for="date">Date: </label>
                                </td>
                                <td>
                                    <input class="my-3" type="date" name="date" id="date">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="workPlace">Work Place: </label>
                                </td>
                                <td>
                                    <select class="mx-2" name="workPlace" id="workPlace">
                                        <option selected value="Company">Company</option>
                                        <option value="Home">Home</option>
                                        <option value="Customer">Customer</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p  class="mt-3">Working Status:</p>
                                </td>
                                <td>
                                    <p  class="mt-3">Offline</p>
                                </td>
                            </tr>
                        </table>
                        <hr>
                        <div class="text-center p-2">
                            <button
                                type="submit"
                                class="btn btn-primary btn-lg"
                            >
                                Punch-in
                            </button>
                        </div>
                    </form>
                </div>
                <div class="row d-flex justify-content-center text-center">
                    <form
                        action="/annualleave"
                        method="post"
                        class="col-xs-12 col-sm-5 col-lg-3"
                    >
                        <button
                            type="submit"
                            class="btn btn-primary btn-lg m-2"
                        >
                            Annual Leave
                        </button>
                    </form>
                </div>
            </div>
        </main>
        <%- include('includes/end.ejs') %>
