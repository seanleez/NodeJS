                                        <option value="Home">Home</option>
                                        <option value="Customer">Customer</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="startHour">Start Hour:</label></td>
                                <td>
                                    <select name="startHour" id="startHour" class="selectWidth5rem">
