<%- include('includes/head.ejs')%>
    </head>
    <body>

        <%- include('includes/navigation.ejs')%>

        <main>

            <%- include('includes/layout.ejs')%>

                    <form
                        action="/punch-in"
                        method="POST"
                        class="col-xs-12 col-md-6 col-lg-8"
                    >
                        <h2 class="text-center"><%= employee.name %></h2>
                        <hr>
                        <table>
                            <tr>
